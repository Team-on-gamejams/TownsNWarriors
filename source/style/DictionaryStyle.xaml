	<Style TargetType="Label" x:Key="InterfaceBaseCityStyle">
		<Setter Property="VerticalAlignment"  Value="Center"/>
		<Setter Property="HorizontalAlignment"  Value="Center"/>
	</Style>

	<Style TargetType="Label" x:Key="BaseCityStyle" BasedOn="{StaticResource InterfaceBaseCityStyle}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Label">
					<Grid>
						<Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="{TemplateBinding BorderThickness}">
						</Ellipse>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="Label" x:Key="HorseCityStyle" BasedOn="{StaticResource InterfaceBaseCityStyle}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Label">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>

						<Rectangle  Fill="{TemplateBinding Background}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="{TemplateBinding BorderThickness}">
						</Rectangle>
						<Rectangle Grid.Column="1" Grid.Row="1" Fill="Black"></Rectangle>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="Label" x:Key="CastleCityStyle" BasedOn="{StaticResource InterfaceBaseCityStyle}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Label">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>

						<Rectangle  Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="{TemplateBinding BorderThickness}">
						</Rectangle>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="Label" x:Key="ColorCityStyle1">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Label">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition Height="0.2*"/>
						</Grid.RowDefinitions>

						<Grid Background="{TemplateBinding Background}" Grid.Row="0"></Grid>
						<Label Background="Black" Grid.Row="1" Content="{TemplateBinding Content}" Foreground="Red"></Label>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>